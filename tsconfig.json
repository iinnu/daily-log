{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "types/*": ["@types/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "@types"]
  },
  "include": ["src", "@types", "src/styles"]
}
